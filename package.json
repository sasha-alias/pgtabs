{
  "name": "sqltabs",
  "version": "1.1.0",
  "author": "Aliaksandr Aliashkevich",
  "description": "SQL Tabs - a browser for databases",
  "repository": {
    "type": "git",
    "url": "https://github.com/sasha-alias/sqltabs"
  },
  "license": "GPL-3.0",
  "main": "main.js",
  "window": {
    "toolbar": false
  },
  "build": {
    "appId": "com.sqltabs",
    "productName": "SQL Tabs",
    "files": [
      "index.html",
      "main.js",
      "logo.png",
      "logo.ico",
      "css",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "afterSign": "electron-builder-notarize",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "logo.icns",
      "hardenedRuntime": true,
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "logo.icns",
      "category": "Development",
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "logo.png",
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "alasql": "^0.3.9",
    "async": "^1.4.2",
    "bootstrap": "^3.3.2",
    "brace": "^0.11.1",
    "c3": "^0.4.0",
    "cassandra-driver": "^3.1.1",
    "cassandra-map": "~0.1.7",
    "crypto-js": "^3.1.9-1",
    "electron-updater": "^4.2.5",
    "firebase": "^5.9.1",
    "firebase-admin": "^7.1.1",
    "flux": "2.0.1",
    "jquery": "^3.3.1",
    "lowdb": "0.7.2",
    "marked": "^4.0.10",
    "microevent": "1.0.0",
    "mkdirp": "*",
    "mssql": "^5.0.3",
    "mysql2": "^1.1.2",
    "performance-now": "^0.2.0",
    "pg": "git+https://github.com/sasha-alias/node-postgres.git",
    "pg-connection-string": "^0.1.3",
    "react": "^0.14.9",
    "react-bootstrap": "^0.30.10",
    "react-color": "^2.11.4",
    "react-dom": "^0.14.9",
    "request": "^2.60.0",
    "sql-formatter": "^1.2.1",
    "tunnel-ssh": "^4.1.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "electron": "4.1.0",
    "electron-builder": "^22.5.1",
    "electron-builder-notarize": "^1.1.2",
    "electron-packager": "^13.1.1",
    "electron-rebuild": "^1.8.4",
    "electron-reload": "^1.4.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "uglify-es": "^3.3.9"
  },
  "optionalDependencies": {
    "msnodesqlv8": "^0.6.12"
  },
  "scripts": {
    "postinstall": "eslint main.js src/ && babel --plugins transform-react-jsx --out-dir=build src/ && electron-builder install-app-deps",
    "start": "electron ./ --dev",
    "compile": "eslint main.js src/ && babel --plugins transform-react-jsx --out-dir=build src/",
    "compile:watch": "eslint main.js src/ && babel --plugins transform-react-jsx --out-dir=build src/ --watch",
    "build": "npm run compile",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --windows",
    "build:linux": "electron-builder --linux",
    "build-msnodesqlv8": ".\\scripts\\build_msnodesqlv8.bat x64"
  }
}
